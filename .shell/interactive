# Put your aliases here

# If in a terminal
if [ -t 0 ]; then
    # Other users shouldn't be able to message by default
    mesg n

    # Enable colours
#    if [ `tput colors` -ge 8 ]; then
#    fi
fi

# Create dotfiles alias
alias dotfiles='/usr/bin/git --git-dir=$HOME/.files/ --work-tree=$HOME'

# Setting preferred options on ls
alias ls='ls -lah' 
alias ll='ls'

# Get rid of command not found
alias cd..='cd ..'
 
# A quick way to get out of current directory
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'

# Prompt user if overwriting during copy
alias cp='cp -i'

# Prompt user when deleting a file
alias rm='rm -i'

# Always print in human readable form
alias df='df -h'
alias du='du -ch'

# Make mount command output pretty and human readable format
alias mount='mount |column -t'

# Handy short cuts
alias h='history'
alias j='jobs -l'

# Create a new set of commands
alias path='echo -e ${PATH//:/\\n}'
alias now=date
alias nowtime='date +"%T"'
alias nowdate='date +"%d-%m-%Y"'

# Stop after sending count ECHO_REQUEST packets
alias ping='ping -c 10'

# Get web server headers
alias header='curl -I'

# Do not delete / or prompt if deleting more than 3 files at a time
alias rm='rm -I --preserve-root'
 
# Confirmation
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'
 
# Parenting changing perms on /
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'

# Become root
alias root='sudo -i'
alias su='sudo -i'

# Enable zsh-completions
fpath=(/usr/local/share/zsh-completions $fpath)
